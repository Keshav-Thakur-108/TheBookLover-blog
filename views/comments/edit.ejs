<%- include("../partials/header") %>

<div class="container-fluid">

    <div style="min-width: 30%; ">
        <div class="form-title-2">
            Update The comment
        </div>
        <form id="editCom" class="editBox" action="/blogs/<%=blog_id%>/<%=comment._id%>?_method=PUT" method="POST">

            <div class="form-group">
                <label for="comment">Comment:</label>
                <textarea class="form-control" name="comments[text]" cols="30" rows="10"><%=comment.text%></textarea>
            </div>



            <button id="publish" class=" btn btn-primary">
                Publish
            </button>
        </form>
    </div>

</div>


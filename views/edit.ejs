<%- include("./partials/header") %>
<div class="container-fluid">

    <div id="editDiv">
        <div class="form-title-2">
            Edit
        </div>
        <form class="editBox" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">


            <div class="form-group">
                <label for="title">Title: </label>
                <input class="form-control" id="text" type="text" name="blog[title]" value="<%= blog.title%>">
            </div>
            <div class="form-group">
                <label id="content">Content: </label>
                <textarea class="form-control" id="content" name="blog[text]" cols="30"
                    rows="10"><%= blog.text %></textarea>
            </div>

            <button id="publish" class=" btn btn-primary">
                Publish
            </button>


        </form>
    </div>

</div>


<%- include("./partials/footer") %>